<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.heeexy.example.dao.PostDao">
    <select id="queryCountPost" resultType="java.lang.Integer">
        SELECT count(id)
        from tyn_post
        where delete_state= 0
    </select>
    <resultMap id="postMap" type="com.heeexy.example.util.model.One2Many">
        <id column="id" property="postId"/>
        <result column="post_owner" property="postOwnerId"/>
        <result column="post_time" property="postTime"/>
        <result column="post_content" property="postContent"/>
        <result column="post_sort" property="postSortId"/>
        <result column="post_location" property="postLocation"/>
        <result column="post_phone" property="postPhone"/>
        <result column="price_low" property="priceLow"/>
        <result column="price_high" property="priceHigh"/>
        <result column="time_start" property="timeStart"/>
        <result column="time_end" property="timeEnd"/>
        <result column="is_top" property="isTop"/>
        <result column="delete_state" property="deleteState"/>
        <result column="praise_offset" property="praiseOffset"/>
        <result column="collect_offset" property="collectOffset"/>
        <result column="view_offset" property="viewOffset"/>
        <result column="user_name" property="postOwnerName"/>
        <result column="categories_name" property="postSortName"/>
        <result column="praiseCount" property="praiseCount"/>
        <result column="viewCount" property="viewCount"/>
        <result column="collectCount" property="collectCount"/>
        <collection property="imgList" ofType="String">
            <id column="img" property="postImg"/>
        </collection>
        <collection property="tagList" ofType="String">
            <id column="business_subway_name" property="tagName"/>
        </collection>
    </resultMap>
    <select id="getAllPost" resultMap="postMap">

           SELECT
            u.*,
            r.role_name                            roleName,
            CONCAT(p.menu_name, p.permission_name) permissionName
        FROM (
                 SELECT
                     id                                      postId,
                     username                                username,
                     nickname                                nickname,
                     role_id                                 roleId,
                     delete_status                           deleteStatus,
                     DATE_FORMAT(create_time, '%Y.%m.%d %T') createTime,
                     DATE_FORMAT(update_time, '%Y.%m.%d %T') updateTime
                 FROM sys_user
                 WHERE delete_status = '1'
                 ORDER BY id
                 LIMIT #{offSet}, #{pageRow}
             ) u
            LEFT JOIN sys_role r ON r.id = u.roleId
            LEFT JOIN sys_role_permission rp ON rp.role_id = r.id
            LEFT JOIN sys_permission p ON p.id = rp.permission_id

        ORDER BY u.userId
    </select>

</mapper>